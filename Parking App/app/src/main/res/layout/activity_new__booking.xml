<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_colors"
    tools:context=".New_Booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date:"
    android:textColor="#FFFAFA"
    android:textSize="30dp"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/date"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:hint="dd/mm/yy"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#FFFAFA"
            android:background="@drawable/style_textfield"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:inputType="textEmailAddress"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textColor="#FFFAFA"
            android:textSize="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Time"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:hint="hh:mm am/pm"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#FFFAFA"
            android:background="@drawable/style_textfield"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="130dp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter slots from 1-10"
            android:textColor="#FFFAFA"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="60dp"></TextView>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/SUBMIT"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_marginTop="630dp"
            android:background="@drawable/style_button"
            android:text="Submit"
            android:textColor="@android:color/background_light"
            android:textSize="20dp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/item_select"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:hint="Enter slot:"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#FFFAFA"
            android:background="@drawable/style_textfield"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="350dp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>



</RelativeLayout>