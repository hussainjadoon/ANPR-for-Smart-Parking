<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_colors"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Login "
            android:layout_marginTop="20dp"
            android:src="@drawable/loginicon"
            android:layout_marginLeft="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/Register"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:text="Register"
            android:textColor="@android:color/background_light"
            android:background="@drawable/style_button"
            android:layout_marginTop="630dp"
            android:textSize="20dp"
            android:layout_marginLeft="30dp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Email_edit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="E-mail"
            android:textSize="20dp"
            android:background="@drawable/style_textfield"
            android:textColor="#FFFAFA"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="230dp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Pass_edit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="password"
            android:background="@drawable/style_textfield"
            android:textSize="20dp"
            android:textColor="@android:color/background_light"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="310dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Cnf_pass"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Confirm password"
            android:textSize="20dp"
            android:background="@drawable/style_textfield"
            android:textColor="@android:color/background_light"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="390dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/Name_person"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Name"
            android:textSize="20dp"
            android:textColor="#FFFAFA"
            android:background="@drawable/style_textfield"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="460dp"
            android:inputType="text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/phone_no"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Phone number"
            android:textSize="20dp"
            android:textColor="#FFFAFA"
            android:drawableLeft="@drawable/ic_smartphone_black_24dp"
            android:textColorHint="#FFFAFA"
            android:layout_marginLeft="40dp"
            android:inputType="number"
            android:background="@drawable/style_textfield"
            android:layout_marginTop="530dp"
            />
    </LinearLayout>
</RelativeLayout>